<h2>Submit a Question!</h2>
<%= form_for @question do |f| %>
  <%= f.text_field :title, placeholder: "Question" %>
  <br />
  <%= f.text_area :description, placeholder: "Question Details" %>
  <br />
  <%= f.submit "Submit"%>
<% end %>
<h3>List of Popular Interview Questions</h3>
<ul id='questions_list'>
	<% @questions.each do |question| %>
		<li><h3><%= link_to question.title, question_path(question.id) %>
      <span id=votes_for_<%=question.id%>><%= question.votes if question.votes>0 %></span>
      <%= button_to('+1', question_path(question), method: 'put', class: 'plus1')%></h3><span class='timestamp'>Posted <%= time_ago_in_words(question.created_at) %> ago</span></li>
	<% end %><br>
</ul>
