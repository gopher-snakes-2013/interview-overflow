<h1><%= @question.title %></h1>
<p><%= @question.description %> </p>

<h2>Comments</h2>
  <ul>
    <% @question.comments.each do |comment| %>
      <li><%= comment.content %></li>
    <% end %>
  </ul>

<%= form_for [@question, @comment] do |f| %>
  <%= f.label "Leave a Comment" %>
  <%= f.text_field :content %>
  <%= f.submit "Post Comment" %>
<% end %>
